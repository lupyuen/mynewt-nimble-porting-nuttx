menuconfig LIBNPL
	bool "NimBLE Porting Layer"
	default n
	---help---
		Enable build for NimBLE Porting Layer

if LIBNPL

config LIBNPL_DEBUG
	bool "NimBLE Porting Layer debugging"
	default n
	---help---
		Enable debugging for NimBLE Porting Layer

endif # LIBNPL
